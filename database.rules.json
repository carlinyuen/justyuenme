{
  "rules": {
    "content": {
      ".read" : "auth != null && root.child('guests').hasChild(auth.uid)"
    },
    "guests": {
      "$uid": {
        ".read" : "$uid === auth.uid",
        "rsvp": {
          ".write": "$uid === auth.uid"
        }
      }
    },
    "users": {
      "$uid": {
        ".read" : "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    }
  }
}
