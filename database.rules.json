{
  "rules": {
    "content": {
      ".read": "auth != null && root.child('guests').hasChild(auth.uid)"
    },
    "guests": {
      "$uid": {
        ".read": "$uid === auth.uid || root.child('groups').child(data.child('group').val()).hasChild(auth.uid)",
        "coming": {
          ".write": "$uid === auth.uid || root.child('groups').child(data.parent().child('group').val()).hasChild(auth.uid)"
        },
        "rsvp": {
          ".write": "$uid === auth.uid"
        },
        "additional-guests": {
          "$index": {
            "coming": {
              ".write": "$uid === auth.uid || root.child('groups').child(data.parent().parent().parent().child('group').val()).hasChild(auth.uid)"
            },
            "givenname": {
              ".write": "$uid === auth.uid || root.child('groups').child(data.parent().parent().parent().child('group').val()).hasChild(auth.uid)",
              ".validate": "newData.isString() && newData.val().length > 2"
            }
          }
        }
      }
    },
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    }
  }
}
